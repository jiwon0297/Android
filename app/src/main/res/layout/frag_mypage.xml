<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mypage.ContentManageActivity">

    <TextView
        android:id="@+id/textNickname"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="30dp"
        android:text="닉네임"
        android:textSize="70px" />
    <TextView
        android:id="@+id/textName"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:text="이름"
        android:textSize="60px" />
    <TextView
        android:id="@+id/textStudentNumber"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:text="학번"
        android:textSize="60px" />

    <ImageView
        android:id="@+id/genderImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-90dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/woman"
        android:padding="0dp"
        android:scaleType="fitXY" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#BDBDBD"/>
    <TextView
        android:id="@+id/PostManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="게시물관리"
        android:textSize="50px" />

    <Button
        android:id="@+id/ContentManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:background="#00FFFFFF"
        android:enabled="true"
        android:text="내가 쓴 글/댓글 단 글"
        android:textSize="80px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        android:background="#BDBDBD" />
    <TextView
        android:id="@+id/notificationManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="알림 설정"
        android:textSize="50px" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="303dp"
        android:layout_height="78dp"
        android:layout_marginStart="60dp"
        android:text="알림"
        android:textSize="70px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        android:background="#BDBDBD" />
    <TextView
        android:id="@+id/AccountManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="계정 설정"
        android:textSize="50px" />

    <Button
        android:id="@+id/UserManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:text="정보변경"
        android:enabled="true"
        android:textSize="80px" />

    <Button
        android:id="@+id/Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="-50dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:text="로그아웃"
        android:enabled="true"
        android:textSize="80px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        android:background="#BDBDBD" />



</LinearLayout>

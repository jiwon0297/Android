<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#65DEE4F6"
    tools:context=".ui.HomeActivity">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:background="@drawable/bell"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/bell"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.196" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="102dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:fontFamily="@font/lottemarthappybold"
            android:gravity="center"
            android:text="슬기로운\n단국생활"
            android:textColor="#C3252424"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/searchView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/btncustom7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/lottemartdreammedium"
                    android:textSize="20sp"
                    android:text="죽전"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButton14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:fontFamily="@font/lottemartdreammedium"
                        android:text="식당" />

                    <RadioButton
                        android:id="@+id/radioButton15"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:fontFamily="@font/lottemartdreammedium"
                        android:text="카페" />
                </RadioGroup>

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@android:drawable/ic_popup_sync" />

            </LinearLayout>

            <Button
                android:id="@+id/button36"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:fontFamily="@font/lottemartdreammedium"
                android:gravity="center"
                android:text="오늘 뭐먹지?"
                android:textColor="#BF000000"
                android:textSize="32sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/lottemartdreammedium"
                    android:textSize="20sp"
                    android:text="천안"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButton16"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="식당" />

                    <RadioButton
                        android:id="@+id/radioButton17"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="카페" />
                </RadioGroup>

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@android:drawable/ic_popup_sync" />

            </LinearLayout>

            <Button
                android:id="@+id/button37"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="오늘 뭐먹지?"
                android:layout_marginBottom="5dp"
                android:textColor="#BF000000"
                android:fontFamily="@font/lottemartdreammedium"
                android:textSize="32sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btncustom7"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_scroll3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id ="@+id/homepage"
            android:orientation="vertical">

            <Button
                android:id="@+id/homepageicon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/homepage"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:fontFamily="@font/lottemartdreammedium"
                android:gravity="center_horizontal"
                android:text="단국대\n포털"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_gravity="fill" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/map"
            android:orientation="vertical">

            <Button
                android:id="@+id/mapicon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/map"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:fontFamily="@font/lottemartdreammedium"
                android:gravity="center_horizontal"
                android:text="캠퍼스\n지도"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_gravity="fill" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/elearning"
            android:orientation="vertical">

            <Button
                android:id="@+id/elearningicon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/elearning"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:fontFamily="@font/lottemartdreammedium"
                android:gravity="center_horizontal"
                android:text="이러닝\n시스템"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_gravity="fill" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/bus"
            android:orientation="vertical">

            <Button
                android:id="@+id/busicon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/shuttle"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:fontFamily="@font/lottemartdreammedium"
                android:gravity="center_horizontal"
                android:text="셔틀버스\n안내"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_gravity="fill" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:scrollbars="none"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavi"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="26dp"
                    android:src="@drawable/meeting"
                    android:gravity="center"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:id="@+id/mateText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imageView1"
                    android:layout_alignBottom="@+id/imageView1"
                    android:layout_marginStart="11dp"
                    android:layout_marginBottom="45dp"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="Mate"
                    android:textColor="#ffffff"
                    android:background="@color/cardview_dark_background"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/mateText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imageView1"
                    android:layout_alignBottom="@+id/imageView1"
                    app:layout_constraintTop_toBottomOf="@+id/mateText1"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="공모전, 밥,\n 스터디, 룸메이트를 구하시나요?"
                    android:fontFamily="@font/lottemarthappybold"
                    android:textSize="14sp"
                    android:textColor="#ffffff"/>

                <Button
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imageView1"
                    android:layout_alignBottom="@+id/imageView1"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="200dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:onClick="mate"
                    android:text=">>Go"
                    android:textSize="25sp"
                    android:textStyle="bold|italic" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="26dp"
                    android:src="@drawable/lost"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/lostText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_marginStart="11dp"
                    android:layout_marginBottom="45dp"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="Lost"
                    android:textColor="#ffffff"
                    android:background="@color/cardview_dark_background"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/lostText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/lostText1"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="분실물을\n 찾거나 주우셨나요?"
                    android:fontFamily="@font/lottemarthappybold"
                    android:textSize="14sp"
                    android:textColor="#ffffff"/>

                <Button
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="200dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:onClick="lost"
                    android:text=">>Go"
                    android:textSize="25sp"
                    android:textStyle="bold|italic" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="26dp"
                    android:gravity="center"
                    android:src="@drawable/restaurant" />

                <TextView
                    android:id="@+id/restaurantText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imageView3"
                    android:layout_alignBottom="@+id/imageView3"
                    android:layout_marginStart="11dp"
                    android:layout_marginBottom="45dp"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="Food/Cafe"
                    android:textColor="#ffffff"
                    android:background="@color/cardview_dark_background"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/restaurantText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imageView3"
                    android:layout_alignBottom="@+id/imageView3"
                    app:layout_constraintTop_toBottomOf="@+id/restaurantText1"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="단국대 주변\n 음식점 or 카페를 찾는다면?"
                    android:fontFamily="@font/lottemarthappybold"
                    android:textSize="14sp"
                    android:textColor="#ffffff"/>

                <Button
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/imageView3"
                    android:layout_alignBottom="@+id/imageView3"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="200dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:onClick="restaurantwhere"
                    android:text=">>Go"
                    android:textSize="25sp"
                    android:textStyle="bold|italic" />
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lottemartdreammedium"
        android:theme="@style/Widget.BottomNavigationView"
        app:itemBackground="@android:color/white"
        app:itemIconTint="#5785CF"
        app:itemTextColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll3"
        app:menu="@menu/menu_bottomnavigationview" />

</androidx.constraintlayout.widget.ConstraintLayout>
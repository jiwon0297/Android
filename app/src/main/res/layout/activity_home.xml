<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#65DEE4F6"
    tools:context=".ui.HomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="102dp"
        android:layout_height="66dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/lottemarthappybold"
        android:text="슬기로운\n단국생활"
        android:textColor="#C3252424"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/searchView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bell"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/bell"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="400dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginBottom="80dp"
        android:background="@drawable/btncustom7"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.895">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/View1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/homepage"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:fontFamily="@font/lottemartdreammedium"
                android:gravity="center_horizontal"
                android:text="학교\n홈페이지"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_gravity="fill" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/View2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/webinfo"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:fontFamily="@font/lottemartdreammedium"
                android:gravity="center_horizontal"
                android:text="웹정보\n시스템"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_gravity="fill" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/View3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/elearning"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:fontFamily="@font/lottemartdreammedium"
                android:gravity="center_horizontal"
                android:text="이러닝\n시스템"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_gravity="fill" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/View4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/shuttle"
                app:layout_gravity="fill" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:fontFamily="@font/lottemartdreammedium"
                android:gravity="center_horizontal"
                android:text="셔틀버스"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_gravity="fill" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/textView2"
        android:layout_width="128dp"
        android:layout_height="280dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/btncustom6"
        android:clickable="true"
        android:fontFamily="@font/tmonmonsorii"
        android:gravity="center"
        android:onClick="mate"
        android:text="Mate"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavi"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/textView3"
        android:layout_width="128dp"
        android:layout_height="280dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/btncustom6"
        android:clickable="true"
        android:fontFamily="@font/tmonmonsorii"
        android:gravity="center"
        android:onClick="lost"
        android:text="LOST/FIND"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/textView5"
        android:layout_width="128dp"
        android:layout_height="280dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/btncustom6"
        android:clickable="true"
        android:fontFamily="@font/tmonmonsorii"
        android:gravity="center"
        android:onClick="restaurantwhere"
        android:text="FOOD/CAFE"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@id/bottomNavi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:fontFamily="@font/lottemartdreammedium"
        android:theme="@style/Widget.BottomNavigationView"
        app:itemBackground="@android:color/white"
        app:itemIconTint="#5785CF"
        app:itemTextColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/menu_bottomnavigationview"
        tools:layout_editor_absoluteX="-8dp" />

    <SearchView
        android:id="@+id/searchView2"
        android:layout_width="234dp"
        android:layout_height="45dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/lottemartdreamlight"
        android:textSize="15sp"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="검색어를 입력하세요." />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="205dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="죽전"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="100dp"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radioButton14"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="식당" />

                <RadioButton
                    android:id="@+id/radioButton15"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="카페" />
            </RadioGroup>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@android:drawable/ic_popup_sync" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="식당 추천"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="천안"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="100dp"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radioButton16"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="식당" />

                <RadioButton
                    android:id="@+id/radioButton17"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="카페" />
            </RadioGroup>

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@android:drawable/ic_popup_sync" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="식당 추천"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
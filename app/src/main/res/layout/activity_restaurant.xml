<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_restraunt"
    tools:context=".restaurant.jukjeon.RestaurantActivity">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/lottemarthappybold"
        android:text="Restraunt"
        android:textColor="#ffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView12345"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView12345"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/lottemarthappybold"
        android:gravity="center"
        android:text="죽전 캠퍼스"
        android:textColor="#C3858585"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_view"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout11"/>


    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cafe"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:background="@drawable/btncustom8"
                android:elevation="20dp"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="CAFE"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/korean"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:background="@drawable/btncustom8"
                android:elevation="20dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="KOREAN"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/japanese"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:background="@drawable/btncustom8"
                android:elevation="20dp"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="JAPANESE"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chinese"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:background="@drawable/btncustom8"
                android:elevation="20dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="CHINESE"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/western"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:background="@drawable/btncustom8"
                android:elevation="20dp"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="WESTERN"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dessert"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:background="@drawable/btncustom8"
                android:elevation="20dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="DESSERT"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
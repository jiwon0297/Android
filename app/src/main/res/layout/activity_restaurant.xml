<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_restraunt"
    tools:context=".restaurant.cheonan.RestaurantActivity2">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/lottemarthappybold"
        android:gravity="center"
        android:text="Restraunt"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView12345"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12345"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/lottemarthappybold"
        android:gravity="center"
        android:text="죽전 캠퍼스"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_view" />

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12345">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cafe"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btncustom8"
                android:elevation="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="180px"
                    android:layout_height="200px"
                    android:layout_gravity="center"
                    android:background="@drawable/cafe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="CAFE"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/korean"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/btncustom8"
                android:elevation="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="180px"
                    android:layout_height="200px"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/korea" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="KOREAN"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/japanese"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btncustom8"
                android:elevation="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="180px"
                    android:layout_height="200px"
                    android:layout_gravity="center"
                    android:background="@drawable/japan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="JAPANESE"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chinese"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/btncustom8"
                android:elevation="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="180px"
                    android:layout_height="180px"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/china" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="CHINESE"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/western"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btncustom8"
                android:elevation="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="180px"
                    android:layout_height="200px"
                    android:layout_gravity="center"
                    android:background="@drawable/western" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="WESTERN"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dessert"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/btncustom8"
                android:elevation="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="180px"
                    android:layout_height="200px"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/dessert" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/lottemarthappybold"
                    android:text="DESSERT"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#51617A"
        android:fontFamily="@font/lottemartdreammedium"
        android:theme="@style/Widget.BottomNavigationView"
        app:itemBackground="@android:color/transparent"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottomnavigationview" />

</androidx.constraintlayout.widget.ConstraintLayout>
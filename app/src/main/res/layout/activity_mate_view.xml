<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:windowSoftInputMode="adjustPan"
    tools:context=".mate.MateViewActivity">

        <ScrollView
            android:id="@+id/scrollView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.051">

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:id="@+id/linearLayout7"
                            android:layout_width="368dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent">

                                <ImageButton
                                    android:id="@+id/imageButton1"
                                    android:layout_width="54dp"
                                    android:layout_height="56dp"
                                    android:layout_gravity="start"
                                    android:background="@drawable/back"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/back"
                                    app:layout_constraintVertical_bias="0.0" />

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="259dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/lottemarthappybold"
                                    android:gravity="center"
                                    android:text="게시글"
                                    android:textAlignment="center"
                                    android:textSize="35sp"
                                    app:layout_constraintVertical_bias="0.041" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginTop="20dp"
                            android:background="#65DEE4F6"
                            android:fontFamily="@font/lottemartdreamlight"
                            android:gravity="center"
                            android:text="제목"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/writer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="24dp"
                            android:background="#65DEE4F6"
                            android:fontFamily="@font/lottemartdreamlight"
                            android:gravity="center"
                            android:text="작성자"
                            android:textAlignment="textEnd"
                            android:textSize="24sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/title" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="24dp"
                            android:background="#65DEE4F6"
                            android:fontFamily="@font/lottemartdreamlight"
                            android:gravity="center"
                            android:text="작성 날짜"
                            android:textAlignment="textEnd"
                            android:textSize="24sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/writer" />

                        <TextView
                            android:id="@+id/content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="24dp"
                            android:background="#65DEE4F6"
                            android:fontFamily="@font/lottemartdreamlight"
                            android:gravity="center"
                            android:text="내용"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toTopOf="@+id/buttongroup"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/date" />

                        <LinearLayout
                            android:id="@+id/buttongroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toTopOf="@id/commentgroup"
                            app:layout_constraintTop_toBottomOf="@+id/content">

                                <Button
                                    android:id="@+id/edit"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="25dp"
                                    android:background="@drawable/btncustom"
                                    android:backgroundTint="#D2DCEA"
                                    android:fontFamily="@font/lottemartdreammedium"
                                    android:gravity="center"
                                    android:text="수정"
                                    android:textAlignment="center"
                                    android:textSize="20sp" />

                                <Button
                                    android:id="@+id/delete"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/btncustom"
                                    android:backgroundTint="#D2DCEA"
                                    android:fontFamily="@font/lottemartdreammedium"
                                    android:gravity="center"
                                    android:text="삭제"
                                    android:textAlignment="center"
                                    android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/commentgroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toTopOf="@id/listView1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/content"
                            app:layout_constraintVertical_bias="0.083">

                                <ImageButton
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:id="@+id/refreshbtn"
                                    android:layout_marginStart="12dp"
                                    android:background="@drawable/refresh"
                                    android:layout_gravity="center"
                                    android:backgroundTint="#CD315E63"
                                    android:gravity="center"/>

                                <EditText
                                    android:id="@+id/commenttext"
                                    android:layout_width="200dp"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="24dp"
                                    android:layout_marginStart="12dp"
                                    android:background="#65DEE4F6"
                                    android:fontFamily="@font/lottemartdreamlight"
                                    android:gravity="center" />

                                <Button
                                    android:id="@+id/commentbutton"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="24dp"
                                    android:background="@drawable/btncustom"
                                    android:backgroundTint="#D2DCEA"
                                    android:fontFamily="@font/lottemartdreammedium"
                                    android:gravity="center"
                                    android:text="등록"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    app:layout_constraintStart_toEndOf="@+id/commenttext" />
                        </LinearLayout>

                        <ListView
                            android:id="@+id/listView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="24dp"
                            android:background="#FFFFFF"
                            android:fontFamily="@font/lottemartdreamlight"
                            android:scrollbars="none"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/commentgroup"
                            app:layout_constraintVertical_bias="0.083" />
                </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="86dp"
            android:layout_height="83dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".lost.LostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/find"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/lost_bg">

            <TextView
                android:id="@+id/findText1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#B3272727"
                android:fontFamily="@font/lottemarthappybold"
                android:text=" Find "
                android:layout_marginTop="10dp"
                android:textColor="#E6FFFFFF"
                android:textSize="50sp"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/roundbtn"
                android:fontFamily="@font/lottemarthappybold"
                android:text="분실물을\n 찾으신다면?\n\n >> GO"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#CCFFFFFF"
                android:textSize="20sp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="30dp"
                android:layout_gravity="end"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/get"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/lost_bg2">

            <TextView
                android:id="@+id/getText1"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:background="#B3272727"
                android:fontFamily="@font/lottemarthappybold"
                android:text=" Get "
                android:layout_marginTop="10dp"
                android:textColor="#E6FFFFFF"
                android:textSize="50sp"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/roundbtn"
                android:fontFamily="@font/lottemarthappybold"
                android:text="분실물을\n 발견하셨다면?\n\n >> GO"
                android:textColor="#CCFFFFFF"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="20sp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="30dp"
                android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@android:color/white"
        android:fontFamily="@font/lottemartdreammedium"
        app:itemIconTint="#5785CF"
        app:itemTextColor="#000000"
        android:theme="@style/Widget.BottomNavigationView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottomnavigationview"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
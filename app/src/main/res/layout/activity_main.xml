<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@id/bottomNavi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:acolor/white"
        app:layout_constraintBottom_toBottmOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:alyout_constraintFight_toLeftOf="parent"
        app:mmenu="@menu/menu_bottomnavigationview" />

    <Button
        android:id="@+id/button"
        android:layout_width="170dp"
        android:layout_height="63dp"
        android:layout_marginEnd="120dp"
        android:onClick="login"
        android:text="로그인 화면으로"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
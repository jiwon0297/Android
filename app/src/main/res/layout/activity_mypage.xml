<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#65DBDEE8"
    tools:context=".ui.MypageActivity">

    <TextView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#51617A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar">

        <LinearLayout
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal"
            android:background="@drawable/btncustom7">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/genderImage_woman"
                    android:layout_width="111dp"
                    android:layout_height="112dp"
                    app:srcCompat="@drawable/woman"
                    tools:visibility="invisible" />

                <ImageView
                    android:id="@+id/genderImage_man"
                    android:layout_width="111dp"
                    android:layout_height="112dp"
                    app:srcCompat="@drawable/man"
                    tools:visibility="invisible" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/lottemartdreammedium"
                    android:gravity="center_vertical"
                    android:text="학번"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/lottemartdreammedium"
                    android:gravity="center_vertical"
                    android:text="이름"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/lottemartdreammedium"
                    android:gravity="center_vertical"
                    android:text="닉네임"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/lottemartdreammedium"
                    android:gravity="center_vertical"
                    android:text="성별"
                    android:textSize="17sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="40dp"
            android:background="#BDBDBD" />

        <LinearLayout
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/btncustom7"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/notificationManage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lottemartdreammedium"
                android:text="게시물 설정"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:textSize="27sp" />

            <Button
                android:id="@+id/ContentManage"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:clickable="true"
                android:fontFamily="@font/lottemartdreammedium"
                android:onClick="content"
                android:text="내가 쓴 글/댓글 단 글"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/btncustom7"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:layout_marginEnd="12dp" >

            <TextView
                android:id="@+id/notificationManage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lottemartdreammedium"
                android:text="알림 설정"
                android:textSize="27sp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="180dp"
                android:layout_height="57dp"
                android:fontFamily="@font/lottemartdreammedium"
                android:text="알림"
                android:layout_gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/btncustom7"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/AccountManage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lottemartdreammedium"
                android:text="계정 설정"
                android:textSize="27sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/UserManage"
                    android:layout_width="148dp"
                    android:layout_height="43dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btncustom"
                    android:backgroundTint="#51617A"
                    android:clickable="true"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/lottemartdreammedium"
                    android:onClick="user"
                    android:text="비밀번호 수정"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/Logout"
                    android:layout_width="148dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btncustom"
                    android:backgroundTint="#51617A"
                    android:textColor="#FFFFFF"
                    android:clickable="true"
                    android:fontFamily="@font/lottemartdreammedium"
                    android:onClick="logout"
                    android:text="로그아웃"
                    android:textSize="20dp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="114dp"
        android:layout_height="118dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:progressTint="#5C87AA"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/Widget.BottomNavigationView"
        app:itemBackground="@android:color/transparent"
        app:itemIconTint="#FFFFFF"
        android:background="#51617A"
        app:itemTextColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottomnavigationview" />


</androidx.constraintlayout.widget.ConstraintLayout>
